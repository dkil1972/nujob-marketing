.blog-box-1
  %p= @item['title']
.blog-box-2.over-hidden
  - if @error.present?
    %p.text-center.font-20= @error
  -elsif @item.nil?
    %p.text-center.font-20= t(".has_no_post")
    
  -else 
    .blog-item
      %p
        %script{src: "//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-53e3a00c154d00b2", type: "text/javascript"}
        %a{:href => blogs_path} << back to all articles
        .addthis_sharing_toolbox
        -# %span.icon.icon-clock
        -# %span.text-grey= @item['date_added'].to_date.strftime("%b %d, %Y")
      .font-20
        %span(id='st_twitter_vcount' displayText='Tweet')
        %span(id='st_twitterfollow_vcount'  displayText='Twitter Follow'  st_username='nujob')
        %span(id='st_linkedin_vcount'  displayText='LinkedIn')
        %span(id='st_email_vcount'  displayText='Email')
        = @item['postbody'].html_safe
      %br
      #disqus_thread
      :javascript
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'nujob';
        var disqus_identifier = "#{@item['id']}";
        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();


      %noscript
        Please enable JavaScript to view the
        %a{:href => "http://disqus.com/?ref_noscript"} comments powered by Disqus.
      %a.dsq-brlink{:href => "http://disqus.com"}
        comments powered by
        %span.logo-disqus Disqus
