.footer
  %div
    .col-50-percent
      %div
        = image_tag("/assets/FLogo.png", class: 'logo')
        = "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;".html_safe
        %a{href: "http://facebook.com/nujobnetwork", class: "icon-footer icon-fb" }
        %a{href: "https://twitter.com/nujobuk", class: "icon-footer icon-tw" }
        %a{href: "https://www.linkedin.com/company/nujob", class: "icon-footer icon-in" }
        %br
        .copyright.font-14.mt-10=t('.copyright').html_safe
    .col-50-percent
      %nav
        %ul.nav.ul-footer
          %li{class: active_link("home", params[:controller],params[:action])}
            %a{:href => root_path}= t('.home')
          %li{class: active_link("about", params[:controller],params[:action])}
            %a{:href => root_path} About us
          %li{class: active_link("blog", params[:controller],params[:action])}
            %a{:href => blogs_path}= t('.blog')
          %li{class: active_link("contact", params[:controller],params[:action])}
            %a{:href => contact_path}= t('.contact')
          %li{class: active_link("login", params[:controller],params[:action])}
            %a{:href => 'https://app.nujob.co.uk'}= content_item("Footer", "login")
      .contact-details
        .phone
          .icon-footer.icon-phone
          %span.mr-5= Constants::TELL
        .email
          .icon-footer.icon-email
          %span= Constants::EMAIL
  %i.icon-search.icon-large.icon-white
.mt-50
