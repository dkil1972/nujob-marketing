$(".list-blog-items").html("<%= j render(:partial => 'home/blog_items') %>");
$("#current_page").val("<%= @current_page %>");

<% if !@item_ids.present? || @item_ids.include?(@last_item_id) %>
  $("#osmek_older").attr("disabled", true);
<% else %>
  $("#osmek_older").removeAttr("disabled");
<% end %>


<% if !@item_ids.present? || @item_ids.include?(@first_item_id) %>
  $("#osmek_newer").attr("disabled", true);
<% else %>
  $("#osmek_newer").removeAttr("disabled");
<% end %>
$('html,body').scrollTop(0);